extends ../../../layouts/sideMain.pug

include ../../../mixins/chartBlock
block content
    .sideMain__box
        ul.sideMain__nav
            a(href=`/music${routes.newest}`)
                li.nav__item.click__nav #{navtitle1}
            a(href=`/music${routes.newestVideo}`)
                li.nav__item #{navtitle3}
    .sideMain__title-box
        .sideMain__title #{sideMainTitle}
    .chart__content-box
        .chart__content
            ul.chart__nav
                li.nav__item 국내
                li.nav__item 해외
            ul.chart__button-nav
                button
                    i.fas.fa-play 
                    | 듣기
                button 
                    i.fas.fa-plus
                    | 담기
                button
                    i.fas.fa-download
                    | 다운                    
                button 
                    i.fas.fa-download
                    | FLAC
                button
                    i.fas.fa-gift
                    | 선물
            .chart__list
                .chart__list-nav
                    if newestMusic
                        .nav__item
                            input(type="checkbox", name="")
                            -for(let i =1; i<=newestMusic.length; i++ )
                                input(type="checkbox", name="")
                        .nav__item NO
                            -for(let i =1; i<=newestMusic.length; i++ )
                                .number #{i}
                        .nav__item 이미지
                                each item in newestMusic
                                    +musicImageBlock({
                                        image: item.image
                                    })
                        .nav__item 곡정보
                                each item in newestMusic
                                    +musicTitleBlock({
                                        title: item.title
                                    })
                        .nav__item 앨범
                                each item in newestMusic
                                    +musicAlbumBlock({
                                        album: item.description
                                    })
                        .nav__item 좋아요
                                each item in newestMusic
                                    +musicLikeBlock({
                                        like: item.views
                                    })
                        .nav__item 듣기
                            -for(let i =1; i<=newestMusic.length; i++ )
                                i.fas.fa-play
                        .nav__item 담기
                            -for(let i =1; i<=newestMusic.length; i++ )
                                i.fas.fa-plus
                        .nav__item 다운
                            -for(let i =1; i<=newestMusic.length; i++ )
                                i.fas.fa-file-download
                    else
                        |Not Found