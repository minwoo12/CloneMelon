extends ../../layouts/adminMain

block content
    form(action=`/admin${routes.musicUpload}`, method="post", enctype="multipart/form-data")
        label(for="imageFile") Image Upload
        input(type="file",id="imageFile", name="musicFile", accept="image/*")
        label(for="musicFile") Music Upload
        input(type="file",id="musicFile", name="musicFile", accept="audio/*")
        input(type="text", name="title", placeholder="Input Title")
        select(name="genre" style="width: 40px;")
            option(value="발라드")
            option(value="댄스")
            option(value="랩/힙합")
            option(value="R&B/Soul")
        input(type="text", name="description", placeholder="Input Description")
        input(type="text", name="artist", placeholder="artist")
        input(type="submit", value="Upload")