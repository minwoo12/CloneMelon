extends ../../layouts/adminMain

block content
    form(action=`/admin${routes.videoUpload}`, method="post", enctype="multipart/form-data")
        label(for="musicFile") Video Upload
        input(type="file",id="musicFile", name="videoFile", accept="video/*")
        input(type="text", name="title", placeholder="Input Title")
        input(type="text", name="description", placeholder="Input Description")
        input(type="text", name="artist", placeholder="artist")
        input(type="submit", value="Upload")